<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <ImageView
        android:layout_marginTop="40dp"
        android:id="@+id/ilustration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_registerillustration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editName">
    </ImageView>

    <TextView
        android:id="@+id/TitleBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Buat Akun Anda"
        android:textColor="#3B4161"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <EditText
        android:id="@+id/editName"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/ic_box_2"
        android:drawableEnd="@drawable/ic_baseline_assignment_ind_24"
        android:ems="10"
        android:hint="Nama Lengkap"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins"
        android:paddingStart="20dp"
        android:paddingTop="2dp"
        android:paddingEnd="24dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toTopOf="@id/ilustration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_box_2"
        android:drawableEnd="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:hint="Email anda"
        android:inputType="textPersonName"
        android:fontFamily="@font/poppins"
        android:paddingStart="20dp"
        android:paddingTop="2dp"
        android:paddingEnd="24dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/editName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText

        android:id="@+id/editPassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_box_2"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:hint="Masukan Password"
        android:inputType="textWebPassword"
        android:fontFamily="@font/poppins"
        android:paddingStart="20dp"
        android:paddingTop="2dp"
        android:paddingEnd="24dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/editPassword2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_box_2"
        android:drawableEnd="@drawable/ic_baseline_lock_24"
        android:ems="10"
        android:hint="Konfirmasi Password"
        android:inputType="textWebPassword"
        android:fontFamily="@font/poppins"
        android:paddingStart="20dp"
        android:paddingTop="2dp"
        android:paddingEnd="24dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/editPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:onClick="setRegister"
        android:id="@+id/buttonRegister"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_button_costum_2"
        android:text="Daftar Akun"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#211F1F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/editPassword2">
    </Button>

    <TextView
        android:id="@+id/lupa_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/poppins_light"
        android:text="Sudah Punya Akun?"
        android:textColor="@color/quantum_black_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRegister"
        app:layout_constraintVertical_bias="0.2"></TextView>

    <TextView
        android:onClick="setLogin"
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:textColor="#27145B"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintTop_toBottomOf="@id/buttonRegister"
        app:layout_constraintLeft_toRightOf="@id/lupa_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        ></TextView>



</androidx.constraintlayout.widget.ConstraintLayout>